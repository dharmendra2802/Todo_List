<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Todo List</title>
</head>
<body>
    
    <!-- section to 'add the details' of the task  -->
    
    <div id="adding-task-cont" >
        <form id="form-cont" action="/add-task" method="post" class="hide">
            <h1>Add task!</h1><span><i id="close" class="fa-sharp fa-solid fa-xmark fa-2xl"></i></span>
            <input type="text" id="id-input-task" class="deco" name="task" placeholder="Add task" required>
            <textarea name="discription" id="id-input-discript" class="deco" placeholder="Add discription" cols="30" rows="10"></textarea>
            <select name="category" id="id-input-category" class="deco">
                <option value="work">work</option>
                <option value="errand">errands</option>
                <option value="important">important</option>
                <option value="travel">travel</option>
                <option value="social">social</option>
                <option value="finance">finance</option>
                <option value="health">health</option>
                
            </select>
            <input class="deco" type="date" id="id-input-duedate" name="duedate">

            <button class="deco" id="id-input-button" type="submit">Add Task</button>
        </form>
    </div>
    <!-- done -->

    <!-- working on main part -->

    <div id="main-cont">
        <div id="heading">TODO List</div>
        <div id="content-div">

            <% for(let i of taskList) { %>
            <div class="task-cont">
                <div id="sec-1">
                    <label class="tick checkbox-container">
                        <input type="checkbox" class="checkbox">
                        <span class="checkmark" ></span>
                    </label>
                    <p class="task-para" ><%= i.taskname %></p>
                    <img src="/img/arrow.png" alt="" class="drop">
                    </i>
                    <div class="dis-box hide" >
                        <%= i.discription %>
                    </div>
                </div>
                <div id="sec-2">
                    <a href="/delete-task?id:<%=i.__id%>"><i  class="fa-solid fa-trash delete" style="color: #32353f;"></i></a>
                    <div class="task-tag"><%= i.category %></div>
                    <p class="task-due"><%= i.duedate %></p>
                </div>
            </div>
            <% } %>
        </div>
        
    </div>
<!-- end -->
<img src="/img/plus.png" alt="add" id="add-button">
<!-- add button -->

</body>
<script src="/js/script.js"></script>
<script src="https://kit.fontawesome.com/e4606a84eb.js" crossorigin="anonymous"></script>

</html>